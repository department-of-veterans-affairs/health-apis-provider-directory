<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Exclusions should include a comment on why the finding can be ignored -->

  <!--
    The converter method can return an optional boolean matching the objects property per the FHIR specification.
  -->
  <Match>
    <Class name="gov.va.api.health.providerdirectory.service.controller.immunization.ImmunizationTransformer"/>
    <Method name="reported"/>
    <Bug pattern="NP_BOOLEAN_RETURN_NULL"/>
  </Match>

  <!--
    This is the regular expression defined in the specification: http://hl7.org/fhir/DSTU2/datatypes.html#dateTime
  -->
  <Match>
    <Class name="gov.va.api.health.providerdirectory.service.controller.DateTimeParameterValidator"/>
    <Bug pattern="REDOS"/>
  </Match>
  <Match>
    <Or>
      <Method name="equals"/>
      <Method name="hashCode"/>
    </Or>
    <Bug pattern="RCN_REDUNDANT_NULLCHECK_OF_NONNULL_VALUE"/>
  </Match>
  
  <!-- URL does not use any user-supplied parameters. -->
  <Match>
    <Class name="gov.va.api.health.providerdirectory.service.client.RestVlerClient"/>
    <Bug pattern="URLCONNECTION_SSRF_FD"/>
  </Match>
</FindBugsFilter>
